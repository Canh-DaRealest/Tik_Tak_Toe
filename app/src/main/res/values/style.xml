<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="hintedt" parent="Widget.Material3.CardView.Outlined">

        <item name="android:textColor">#D51D1D1D</item>
        <item name="android:textSize">16sp</item>
    </style>

    <color name="text_hint">#00796B</color>


    <style name="outline_edt" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <item name="colorAccent">@color/black</item>
    </style>

    <style name="row">

        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="cellSize">
        <item name="android:padding">25dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="verticalLine">
        <item name="background">@color/black</item>
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="horizontalLine">
        <item name="background">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
    </style>
</resources>